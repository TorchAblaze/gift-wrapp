<p style="color: green"><%= notice %></p>

<%= render @giftee %>

<h1><%= @giftee.name %></h1>

<% if !@giftee.gifts.empty? %>
  <% @giftee.gifts.each do |gift| %>
    <p>
      <span><%= link_to gift.name, gift_path(gift) %></span>
      <span class="edit"><%= link_to "Edit", edit_gift_path(gift), class: "edit" %></span>
    </p>
  <% end %>
<% else %>
  <p>This giftee doesn't have any gifts yet! Click "Add gift" to create one.</p>
<% end %>


<br>
<div>
  <%= link_to "Edit this giftee", edit_giftee_path(@giftee), class: "edit" %> |
  <%= link_to "Back to giftees", giftees_path, class: "edit" %>
  <br>
  <br>
  <%= button_to "Delete giftee", @giftee, method: :delete, class: "btn btn-outline-dark" %>
</div>
