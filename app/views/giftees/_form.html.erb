<%= form_with(model: giftee) do |form| %>
  <% if giftee.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(giftee.errors.count, "error") %> prohibited this giftee from being saved:</h2>

      <ul>
        <% giftee.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, "Giftee name:", class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="row">
    <div class="mb-3 form-group col-md-2">
      <%= form.label :birthdate, "Giftee birthdate:", class: "form-label"%>
      <%= form.date_field :birthdate, class: "form-control" %>
    </div>
    <div class="mb-3 form-group col-md-2">
      <%= form.label :phone_number, "Giftee phone number:", class: "form-label" %>
      <%= form.text_field :phone_number, class: "form-control" %>
    </div>
    <div class="mb-3 form-group col-md-8">
      <%= form.label :email, "Giftee email:", class: "form-label" %>
      <%= form.text_field :email, class: "form-control" %>
    </div>
  </div>


  <div class="mb-3">
    <%= form.label :street_1, "Street Address 1:", class: "form-label" %>
    <%= form.text_field :street_1, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :street_2, "Street Address 2:", class: "form-label" %>
    <%= form.text_field :street_2, class: "form-control" %>
  </div>

  <div class="row">
    <div class="mb-3 form-group col-md-8">
      <%= form.label :city, "City:", class: "form-label" %>
      <%= form.text_field :city, class: "form-control" %>
    </div>
    <div class="mb-3 form-group col-md-2">
      <%= form.label :state, "State/Province:", class: "form-label" %>
      <%= form.text_field :state, class: "form-control" %>
    </div>

    <div class="mb-3 form-group col-md-2">
      <%= form.label :zipcode, "Zip or postal code:", class: "form-label" %>
      <%= form.text_field :zipcode, class: "form-control" %>
    </div>
  </div>

  <div class="mb-3">
    <%= form.label :country, "Country:", class: "form-label" %>
    <%= form.text_field :country, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.submit class: "btn btn-outline-dark" %>
  </div>
<% end %>
