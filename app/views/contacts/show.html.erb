<h1><%= link_to @giftee.name, giftee_path(@giftee.id), class: "giftees" %></h1>

<% if !@giftee.email == "" %>
  <p><span class="bold">Email:</span> <%= mail_to @giftee.email %></p>
<% end %>

<p class="bold">Address:</p>
<p><%= @giftee.street_1 %></p>
<p><%= @giftee.street_2 %></p>
<p><%= @giftee.city %></p>
<p><%= @giftee.state %></p>
<p><%= @giftee.zipcode %></p>
<p><%= @giftee.country %></p>

<% if !@giftee.phone_number == "" %>
  <p><span class="bold">Phone Number:</span> <%= @giftee.phone_number %></p>
<% end %>
<br>
<div>
  <%= link_to "Edit this giftee", edit_giftee_path(@giftee), class: "btn btn-outline-secondary" %> |
  <%= link_to "Back to giftees", giftees_path, class: "btn btn-outline-dark" %>
  <br>
  <br>
  <br>
  <%= button_to "Delete giftee", @giftee, method: :delete, class: "btn btn-outline-danger" %>
</div>
